{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2021",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@prismalocal/*": ["../../prisma/*"],
      "@library/*": ["../../library/*"],
      "@middlewares/*": ["../../middlewares/*"],
      "@typescatalog/*": ["../../types/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "../../library/**/*",
    "../../prisma/**/*",
    "../../middlewares/**/*",
    "../../types/**/*",
    "./**/*"
  ]
}
